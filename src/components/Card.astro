---
interface Props {
	title: string;
	body: string;
    icon?: string;
}

const { icon, title, body } = Astro.props;
---

<li class="link-card">
    <div>
        <h2>
            <span class="material-symbols-rounded">{icon}</span> {title}
        </h2>
        <p>
            {body}
        </p>
    </div>
</li>

<style>
	.link-card {
		list-style: none;
		display: flex;
		padding: 2px;
		background: radial-gradient(at top right, var(--dark), var(--darker));;
		background-size: 400%;

		border-radius: 8px;
        border: var(--lighter) 1px solid;
		box-shadow: 0 4px 16px rgba(0, 0, 0, 0.6);
        text-align: left;
        padding: 16px 16px;

        transition: filter 0.1s ease-in-out;
	}
    .link-card:hover {
        filter: brightness(110%);
        transition: filter 0.1s ease-in-out;
    }
    a {
        text-decoration: none;
        color: white;
    }
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
    span {
        position: relative;
        bottom: -5px;
    }
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
        font-size: 16px;
	}
</style>