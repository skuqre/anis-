--- 
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/anise/images/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<script src="https://kit.fontawesome.com/7416320301.js" crossorigin="anonymous"></script>
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@48,400,1,0" />
	</head>
	<body>
		<Header />
		<slot />
		<Footer />
	</body>
</html>
<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Nunito+Sans:ital,opsz,wght@0,6..12,400;0,6..12,500;0,6..12,600;0,6..12,700;0,6..12,800;0,6..12,900;1,6..12,400;1,6..12,500;1,6..12,600;1,6..12,700;1,6..12,800;1,6..12,900&display=swap');

	:root {
		--main-color: #f4d259;

		--lighter: #353535;
		--light: #303030;
		--dark: #252525;
		--darker: #1d1d1d;
		--darkerer: #151515;
		--darkest: #101010;
	}
	html {
		font-family: 'Nunito Sans', sans-serif;
		
		background: var(--dark);
		background-image: radial-gradient(var(--darker) 4px, transparent 0);
		background-size: 64px 64px;
		background-position: center;

		color: white;
		text-align: center;
	}
	body {
		margin: 0;
		padding: 0;

		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}
	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;

		text-align: center;
		text-shadow: #000 0 0 8px;
	}

	.lower {
		font-size: 16px;
		margin: 32px;
	}

	a {
        color: var(--main-color);
        text-decoration: none;
    }

    a:hover, a:active {
        text-decoration: underline;
    }

	body::-webkit-scrollbar-track
    {
        background-color: var(--darker);
    }

    body::-webkit-scrollbar
    {
        width: 16px;
        background-color: rgba(0,0,0,0);
    }

    body::-webkit-scrollbar-thumb
    {
        border: 4px solid transparent;
        border-radius: 16px;
        background-color: var(--lighter);
        background-clip: content-box;
    }
	
</style>
